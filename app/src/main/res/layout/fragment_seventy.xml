<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:label="400 Shades of UST"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.MyApp.prototype_tan.seventy$PlaceholderFragment"
    android:background="@drawable/abc_ab_bottom_solid_dark_holo"
    android:clickable="false">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="THROWBACK 1970s"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="30dp"
        android:textColor="#ffffca00" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/imageView3"
        android:src="@drawable/seventy"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:id="@+id/editText"
        android:text="The UST High School (USTHS) Building got burned down in 1975. On 1976, classes in high school were transferred to the UST Central Seminary. The new USTHS building was inaugurated in the same year and is now known as the Benavides Building."
        android:textColor="#ffacacac"
        android:textSize="10dp"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3"
        android:layout_marginTop="47dp" />

    <ImageView
        android:onClick="home2"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:id="@+id/imageView4"
        android:clickable="true"
        android:src="@drawable/hehehemain"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="262dp"
        android:layout_below="@+id/imageView3"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3" />

</RelativeLayout>
