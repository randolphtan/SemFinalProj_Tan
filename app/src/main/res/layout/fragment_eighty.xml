<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:label="400 Shades of UST"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.MyApp.prototype_tan.eighty$PlaceholderFragment"
    android:background="@drawable/abc_ab_bottom_solid_dark_holo">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="THROWBACK 1980s"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="30dp"
        android:textColor="#ffffca00" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:src="@drawable/paul"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/editText"
        android:text='Pope John Paul II at UST, 1981  "As a Pontifical University, Santo Tomás has a special right to the Pope’s attention."-Pope john Paul II '
        android:textColor="#ffacacac"
        android:layout_above="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />

    <ImageView
        android:onClick="home3"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/imageView2"
        android:src="@drawable/hehehemain"
        android:clickable="true"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="242dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />

</RelativeLayout>
